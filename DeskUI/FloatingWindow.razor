﻿@using DeskUI.Services
@using Microsoft.JSInterop

@inject WindowManager WindowManager
@inject IJSRuntime JSRuntime

<div id="@WindowId"
     class="window @(WindowManager.DarkModeColours ? "theme-dark" : "theme-light")"
     style="@Style"
     @onmousedown="BringToFront">
    <div class="window-header" @onmousedown="StartDrag">
        <div class="window-title">@Title</div>
        <button class="window-close" @onclick="Close">&times;</button>
    </div>

    <div class="window-content">
        @ChildContent
    </div>

    <div class="window-resizer" @onmousedown="StartResize"></div>
</div>